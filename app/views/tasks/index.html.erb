<p style="color: green"><%= notice %></p>

<h1>Tasks under <%= @category.title %></h1>

<div id="tasks">
  <% if @tasks.any? %>
    <% @tasks.each do |task| %>
      <h2><%= task.title %></h2>
      <p><%= task.description %></p>
      <p>
        <%= link_to 'Show', category_task_path(@category, task) %>
      </p>
    <% end %>
  <% else %>
    <p>No tasks found.</p>
  <% end %>
</div>

<div>
  <%= link_to "Back to #{@category.title}", category_path(@category) %> |
  <%= link_to 'New task', new_category_task_path(@category) %>
</div>
