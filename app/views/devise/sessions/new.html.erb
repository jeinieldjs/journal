<div class='reg-wrapper'>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class='reg-form'>
    
    <div class='reg-form-top log-form-top'>
      <h2>Log in</h2>
    </div>

  <div class='reg-form-body'>
    <div class="field">
      <%= f.label :email, class: 'reg-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'reg-input' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'reg-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'reg-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'reg-label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'submit-btn' %>
    </div>
  <% end %>
  </div>
</div>
</div>