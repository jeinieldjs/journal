<% if user_signed_in? %>
  <h1> Welcome, <%= current_user.email %>!</h1> 
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>

<div class='wrapper'>
  <div class='page-top'>
    <h1 class='page-title'>Categories</h1>
    <span class='add-btn'><%= link_to "+", new_category_path %></span>
  </div>
  <p style="color: green"><%= notice %></p>

  <div class='page-body'>
    <% current_user.categories.each do |category| %>
      <%= render category %>
      <div class='indiv-categ'>
        <h2 class='categ-title'><%= link_to(category.title, category_path(category)) %></h2>
        <p class='categ-description'><%= truncate(category.description, length: 100) %></p>
        
      </div>
    <% end %>
  </div>
  
</div>

<% else %>
  <%= link_to 'Sign in', new_user_session_path %> |
  <%= link_to 'Sign up', new_user_registration_path %>
<% end %>
