<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
    <div>
      <h1><%= category.title %></h1>
      <p><%= category.description %></p>
      <%= link_to "Show this category", category %>
    </div>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
